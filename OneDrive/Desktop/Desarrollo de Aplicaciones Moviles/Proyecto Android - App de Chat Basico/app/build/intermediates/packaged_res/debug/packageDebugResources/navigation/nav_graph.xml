<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.app.chat.feature.auth.ui.LoginFragment"
        android:label="Login" >
        <action
            android:id="@+id/action_login_to_chatList"
            app:destination="@id/chatListFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.app.chat.feature.chatlist.ui.ChatListFragment"
        android:label="Chats" >
        <action
            android:id="@+id/action_chatList_to_chat"
            app:destination="@id/chatFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.app.chat.feature.chat.ui.ChatFragment"
        android:label="Chat" />
</navigation>
