<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.app.chat.feature.auth.ui.RegisterFragment"
        android:label="Register">
        <!-- After successful sign-up, go to Login -->
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.app.chat.feature.auth.ui.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_chatList"
            app:destination="@id/chatListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <!-- Keep this so user can switch back if needed -->
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.app.chat.feature.chatlist.ui.ChatListFragment"
        android:label="Chats">
        <action
            android:id="@+id/action_chatList_to_chat"
            app:destination="@id/chatFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.app.chat.feature.chat.ui.ChatFragment"
        android:label="Chat" />
</navigation>
